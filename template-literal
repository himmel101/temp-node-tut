// JS nuggets Template Literals

// multi-line strings
console.log(`string text line 1 

string text line 2`)

console.log('string text line 3 string text line 4')
// if started next line bfeaks out of quotes  - fails
//  so backticks makes multi-line work

// expression interpolation
var a = 5;
var b = 10;
console.log(`fifteen is ${a+b} and\nnot ${2*a+b}.`)

console.log('or say : reference a variable in a string \n without adding plus signs to concatenate ')



